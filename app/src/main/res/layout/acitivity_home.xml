<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/civProfile"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_baseline_account_circle_24"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M Nizar Y.P"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@id/civProfile"
                app:layout_constraintTop_toTopOf="@id/civProfile"/>

            <TextView
                android:id="@+id/tvJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tittle"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@id/civProfile"
                app:layout_constraintBottom_toBottomOf="@id/civProfile"/>

            <ImageView
                android:id="@+id/ivOption"
                android:layout_width="54dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:onClick="openOption"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/ivTimer"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_baseline_timer_24"
                android:onClick="openSchedule"
                app:layout_constraintRight_toLeftOf="@id/ivOption"
                app:layout_constraintTop_toTopOf="@id/ivOption"
                app:layout_constraintBottom_toBottomOf="@id/ivOption" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>